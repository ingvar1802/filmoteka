{{#each this}}
<li class="movies-item">
    <div class="poster">
        <img class="image" src="https://image.tmdb.org/t/p/w600_and_h900_bestv2/{{poster_path}}" alt="{{title}}"
            data-id="{{id}}" />
    </div>

    <div class="info">
        <h3 class="info-title">{{title}}</h3>
        <p class="info-container">
            <span class="info-list">{{#each genre_ids}} {{name}} {{/each}}| {{release_date}}</span>
        </p>
    </div>
</li>
{{/each}}